# Database
DATABASE_URL="postgresql://username:password@localhost:5432/recipe_finder"

# Server
PORT=8000
NODE_ENV=development

# JWT
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# AI APIs (choose one)
OPENAI_API_KEY=your-openai-api-key-here
HUGGINGFACE_API_KEY=your-huggingface-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here

# Google APIs (for future use)
GOOGLE_CALENDAR_CLIENT_ID=your-google-client-id
GOOGLE_CALENDAR_CLIENT_SECRET=your-google-client-secret
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Google Places API - Choose ONE of these methods:

# Method 1: API Key (simple but has IP restrictions)
GOOGLE_PLACES_API_KEY=your-google-places-api-key

# Method 2: OAuth Service Account (recommended - no IP restrictions)
# Either provide the path to the service account key file:
GOOGLE_SERVICE_ACCOUNT_KEY_PATH=./path/to/service-account-key.json
# OR provide the service account key as a JSON string:
GOOGLE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your-project",...}

# Method 3: OAuth Client Credentials (for user-based auth)
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# External Recipe APIs (for future use)
SPOONACULAR_API_KEY=your-spoonacular-api-key
EDAMAM_API_KEY=your-edamam-api-key
EDAMAM_APP_ID=your-edamam-app-id

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Service (for password reset emails) - Choose ONE method:

# Method 1: Gmail OAuth (recommended for production)
GMAIL_CLIENT_ID=your-gmail-oauth-client-id
GMAIL_CLIENT_SECRET=your-gmail-oauth-client-secret
GMAIL_REFRESH_TOKEN=your-gmail-refresh-token
GMAIL_USER_EMAIL=your-gmail-address@gmail.com

# Method 2: SMTP (Gmail app password, SendGrid, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password-or-smtp-password

# Email Configuration
EMAIL_FROM=noreply@yourapp.com
FRONTEND_URL=http://localhost:5173 